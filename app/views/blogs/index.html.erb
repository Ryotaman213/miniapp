<body>

  <nav class="#e57373 red lighten-2">
    <div class="nav-wrapper">
      <a href="#" class="brand-logo">MiniAppBlog</a>
      <ul id="nav-mobile" class="right hide-on-med-and-down">

          <% if user_signed_in? %>
        <li>
          <%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
        </li>
        <li><a href="/blogs/new">ブログを書く</a></li>
          <% else %>
        <li>
          <%= link_to "Login",new_user_session_path, method: 'get' %>
          </li>
        <li>
          <%= link_to "Register", new_user_registration_path, method: 'get' %>
          s</li>
          <% end %>
      </ul>
    </div>
  </nav>


     <% @blogs.each do |blog| %>
      <div class="row">
        <div class="col s12 m6">
          <div class="card white">
            <div class="card-content blue-text">
              <p><%= blog.text %></p>
                <span><%= time_ago_in_words(blog.created_at) %>前に投稿</span>
            </div>
            <% if user_signed_in? && current_user.id == blog.user_id %>
            <div class="card-action">
              <a href="/users/<%= current_user.id %>">詳細</a>

              <%= link_to '編集', "/blogs/#{blog.id}/edit", method: :get %>

              <%= link_to '削除', "/blogs/#{blog.id}", method: :delete %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>

  <%= paginate(@blogs) %>

<!-- <script type="text/javascript" src="./app.js"></script> -->
</body>
</html>
